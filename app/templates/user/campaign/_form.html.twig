<div class="col-md-12">
    {{ form_start(form) }}
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.name) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.typeCompany) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.typeCompany) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.ynp) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.ynp) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.address) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.address) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.industry) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.industry) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.phone) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.phone) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.email) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.email) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.contactPerson) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.contactPerson) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            {{ form_label(form.additionalInformation) }}
        </div>
        <div class="col-md-4">
            {{ form_widget(form.additionalInformation) }}
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">{{ button_label|default('Сохранить') }}</button>
    </div>
    {{ form_end(form) }}
</div>