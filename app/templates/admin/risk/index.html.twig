{% extends 'admin/base.html.twig' %}

{% block title %}Риски{% endblock %}

{% block body %}
    <h1>Риски</h1>
    <br>
    <a class="btn btn-primary" href="{{ path('risk_new') }}">Добавить риск</a>
    <br><br>
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Название</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for risk in risks %}
            <tr>
                <td>{{ risk.id }}</td>
                <td>{{ risk.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('risk_edit', {'id': risk.id}) }}" style="float: left"><i class="fas fa-edit"></i></a>
                    {{ include('admin/risk/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
