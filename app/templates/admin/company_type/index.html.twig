{% extends 'admin/base.html.twig' %}

{% block title %}Организационно-прававые формы{% endblock %}

{% block body %}
    <h1>Организационно-прававая формы</h1>
    <br>
    <a class="btn btn-primary" href="{{ path('company_type_new') }}">Создать новую организационно-прававую форму</a>
    <br><br>
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for company_type in company_types %}
            <tr>
                <td>{{ company_type.id }}</td>
                <td>{{ company_type.name }}</td>
                <td class="float-left">
                    <a class="btn btn-primary" href="{{ path('company_type_edit', {'id': company_type.id}) }}" style="float: left"><i class="fas fa-edit"></i></a>
                    {{ include('admin/company_type/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
