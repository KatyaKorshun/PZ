<br><br>
<h2 style="text-align: center">Регистрация:</h2>
<div class="col-sm-4" style="margin:0 auto">
    {{ form_start(form, {'action': path('fos_user_registration_register'), attr: {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.username, 'Имя', {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, 'Е-майл', {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.first, 'Пароль', {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="form-group">
        {{ form_label(form.plainPassword.second, 'Подтверждение пароля', {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_errors(form.plainPassword.second) }}
    </div>

    <div class="form-group">
        <div class="col-sm-4 col-sm-12">
            <input type="submit" value="Регистрация" class="btn btn-primary"/>
        </div>
    </div>

    {{ form_end(form) }}
</div>